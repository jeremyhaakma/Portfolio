package week06;

public Class RecursiveApp{

    public static void main(String[] args){
        long test = 14325636345;
        digits(test);
    }

    public static long digits(long n){
        long d = 0;
        if (n < 10 && n > -10){
            return 1;
        } else {
            return 1 + digits(n/10);
        }


        return d;
    }




}
